<article class="media box">
  <div class="media-content">       
    <%= simple_form_for @post do |f| %>
      <%= f.error_notification %>
      <div class="field">
        <div class="control">
          <%= f.input :title,
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label" },
                      autofocus: true
          %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :body,
                      label: "Write an insult",
                      input_html: {class: "textarea"},
                      wrapper: false, label_html: { class: "label" },
                      placeholder: "Spit out what you've been hiding from your besties for years",
                      autofocus: true
          %>
        </div>
      </div>
      <%= f.button :submit, class: "button is-info"%>
    <% end %>
  <div>
</article>
