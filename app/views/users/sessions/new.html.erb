<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Log In to Roast</h2>
        <%= simple_form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :email,
                          required: true,
                          input_html: { class: "input" },
                          wrapper: false,
                          label_html: { class: "label"} %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.input :password,
                          required: true,
                          input_html: { class: "input" },
                          wrapper: false,
                          label_html: { class: "label"},
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            </div>
          </div>
          <br>

          <div class="field">
              <div class="control">
                <%= f.button :submit, "Log In", class: "button is-info is-medium" %>
              </div>
            </div>
          <% end %>
          <br>
      
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
